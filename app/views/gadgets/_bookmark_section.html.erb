<% if gadget.bookmarked_by?(current_user) %>        
  <%= link_to gadget_gadget_bookmarks_path(gadget.id), class: "icon-delete", method: :delete, remote: true, 'data-bs-toggle': :tooltip, 'data-bs-placement': :top, 'title': :'ブックマークをやめる' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>    
<% else %>
  <%= link_to gadget_gadget_bookmarks_path(gadget.id), class: "icon-post", method: :post, remote: true, 'data-bs-toggle': :tooltip, 'data-bs-placement': :top, 'title': :'ブックマークする' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>        
<% end %>
<%= gadget.gadget_bookmarks.size %>