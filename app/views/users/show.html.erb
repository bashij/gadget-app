<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.image.url %>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.tweets.any? %>
      <h3>ツイート (<%= @user.tweets.count %>) </h3>
      <ol class="tweets">
        <%= render @tweets %>
      </ol>
    <% end %>
  </div>
</div>