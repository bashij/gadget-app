<div class="post" id="comment_<%= comment.id %>">
  <div class="tweet-section-left">
    <div class="user-info">
      <%= image_tag comment.user.image.url %>
      <span class="user"><%= link_to comment.user.name, comment.user %></span>
    </div> 
  </div>
  <div class="post-content tweet-section-right">
    <div class="tweet-icon">
      <span>
        <%= time_ago_in_words(comment.created_at) %>前
      </span>    
      <span class="tweet-icons">
        <a id="collapse_reply_icon_<%= comment.id %>" class="" data-bs-toggle="collapse" href="#collapse_reply_<%= comment.id %>" aria-expanded="false" aria-controls="collapse_reply_<%= comment.id %>" data-bs-toggle="tooltip" data-bs-placement="top" title="返信フォームを開く">
          <i class="fa-solid fa-reply"></i>
        </a>
      </span>
      <span class="tweet-icons">
        <% if current_user?(comment.user) %>
          <%= link_to gadget_comment_path(@gadget, comment), class: "icon-delete", method: :delete, remote: true, data: {confirm: '投稿を削除してよろしいですか？'} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        <% end %>        
      </span>      
    </div>     
    <hr>
    <div class="p-2">          
      <span class="content text-break"><%= comment.content %></span>
    </div>    
    <section class="collapse" id="collapse_reply_<%= comment.id %>">
      <%= form_with(model: [@gadget, @comment_reply], local: false) do |f| %>
        <div id="error_explanation_<%= comment.id %>" class="text-center">
          <%= render 'shared/error_messages_reply', object: f.object %>
        </div>        
        <div class="mb-3 field message-box">
          <%= f.text_area :content, placeholder: '返信内容を入力', class: 'form-control', id: "reply_form_text_#{comment.id}" %>
          <%= f.hidden_field :gadget_id, value: @gadget %>
          <%= f.hidden_field :parent_id, value: comment.id %>          
        </div>       
        <div class="text-center m-4">
          <p>
            <%= f.submit '投稿する', class: 'btn btn-create', id: "reply_submit_#{comment.id}" %>
          </p>
        </div>        
      <% end %>
    </section>
    <div class="reply-count">
      <span id="reply_count_<%= comment.id %>">
        <%= render "comments/reply_count", comment: comment %>
      </span>
    </div>
    <div class="collapse" id="collapse_<%= comment.id %>">    
      <div class="accordion-body">
        <div id="replies_<%= comment.id %>" class="replies">
          <%= render "comments/reply", comment: comment %>
        </div>
      </div>
    </div> 
  </div>
</div>