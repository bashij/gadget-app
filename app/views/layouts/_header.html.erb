<header class="header p-2 p-lg-3 mb-5 row">
  <%# ロゴ %>
  <div class="logo fs-2 col-3">
    <%= link_to "GadgetLink",root_path,{class: ""} %>      
  </div>      
  <%# メニュー 通常時 %>
  <div class="menu d-none d-lg-block col-lg-9 text-end">
    <%= link_to "HOME",root_path ,{class: "d-inline-block nav-link", id: "home_large"} %>
    <%= link_to "HELP",about_path,{class: "d-inline-block nav-link", id: "help_large"} %> 
    <%= link_to "USERS",users_path,{class: "d-inline-block nav-link", id: "users_large"} %>
    <% if logged_in? %>
      <%= link_to "MYPAGE",current_user,{class: "d-inline-block nav-link", id: "mypage_large"} %>
      <%= link_to "SETTING",edit_user_path(current_user),{class: "d-inline-block nav-link", id: "setting_large"} %>
      <%= link_to "LOGOUT",logout_path,{class: "d-inline-block nav-link",method: :delete, id: "logout_large"}%>
    <% else %>
      <%= link_to "LOGIN",login_path,{class: "d-inline-block nav-link", id: "login_large"} %>
    <% end %>        
  </div>
  <%# メニュー 縮小時 %>
  <div class="menu_btn fs-2 col-9 d-lg-none d-inline-block pe-3 text-end">
    <a id="header_menu" class="" data-bs-toggle="collapse" href="#nav_header" aria-expanded="false" aria-controls="nav_header data-bs-toggle="tooltip" data-bs-placement="top" title="返信フォームを開く"">
      <i class="fa-solid fa-bars"></i>
    </a>
  </div>   
  <div class="collapse col-12 d-lg-none text-end" id="nav_header">
    <%= link_to "HOME",root_path ,{class: "d-block nav-link", id: "home_small"} %>
    <%= link_to "HELP",about_path,{class: "d-block nav-link", id: "help_small"} %> 
    <%= link_to "USERS",users_path,{class: "d-block nav-link", id: "users_small"} %>
    <% if logged_in? %>
      <%= link_to "MYPAGE",current_user,{class: "d-block nav-link", id: "mypage_small", id: "mypage_small"} %>
      <%= link_to "SETTING",edit_user_path(current_user),{class: "d-block nav-link", id: "setting_small"} %>
      <%= link_to "LOGOUT",logout_path,{class: "d-block nav-link",method: :delete, id: "logout_small"}%>
    <% else %>
      <%= link_to "LOGIN",login_path,{class: "d-block nav-link", id: "login_small"} %>
    <% end %>         
  </div>  
</header>

