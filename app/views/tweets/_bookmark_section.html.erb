<% if tweet.bookmarked_by?(current_user) %>
  <%= link_to tweet_tweet_bookmarks_path(tweet.id), class: "icon-delete", method: :delete, remote: true, 'data-bs-toggle': :tooltip, 'data-bs-placement': :top, 'title': :'ブックマークをやめる' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>    
<% else %>
  <%= link_to tweet_tweet_bookmarks_path(tweet.id), class: "icon-post", method: :post, remote: true, 'data-bs-toggle': :tooltip, 'data-bs-placement': :top, 'title': :'ブックマークする' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% end %>
<%= tweet.tweet_bookmarks.size %>