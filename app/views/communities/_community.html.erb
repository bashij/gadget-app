<div class="community_items">
  <%= image_tag community.image.url, size: '100x100' %>
  <%= link_to community.name, community_path(community) %>
  <% if current_user?(community.user) %>
    <%= link_to 'delete', community, method: :delete, data: {confirm: 'コミュニティを削除してよろしいですか？'} %>
    <%= link_to '編集', edit_community_path(community) %>
  <% end %>
  <% if community.joined_by?(current_user) %>
    <p><%=link_to '脱退する', community_memberships_path(community.id), method: :delete %>参加者数:<%= community.memberships.size %></p>
  <% else %>
    <p><%=link_to '参加する', community_memberships_path(community.id), method: :post %>参加者数:<%= community.memberships.size %></p>
  <% end %>
</div>