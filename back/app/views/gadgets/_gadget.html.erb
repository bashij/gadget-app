<div class="gadget" id="gadget_<%= gadget.id %>">
  <div class="gadget-image">
    <div>
      <%= image_tag gadget.image.url %>
    </div>
    <div class="review-icons">
      <span id="like_section_<%= gadget.id %>">
        <%= render "gadgets/like_section", gadget: gadget %>
      </span>
      <span id="bookmark_section_<%= gadget.id %>">
        <%= render "gadgets/bookmark_section", gadget: gadget %>
      </span>
      <span>
        <%= link_to gadget_review_requests_path(gadget.id), class: "icon-post", method: :get, 'data-bs-toggle': :tooltip, 'data-bs-placement': :top, 'title': :'レビューリクエストしている人を見る' do %>
          <i id="review_request_show_button_<%= gadget.id %>" class="fa-solid fa-users"></i>
        <% end %>
        <span id="review_request_count_<%= gadget.id %>">
          <%= render "gadgets/review_request_count", gadget: gadget %>          
        </span>
      </span>
    </div>
    <div class="review-link">  
      <% if gadget.review.blank? %>
        <span id="review_request_section_<%= gadget.id %>">
          <%= render "gadgets/review_request_section", gadget: gadget %>
        </span>
      <% else %>
        <%= link_to "レビューを見る", gadget_path(gadget) %>
      <% end %>
    </div>    
    <% if current_user?(gadget.user) %>
      <div class="review-link">  
        <%= link_to 'レビュー編集', edit_gadget_path(gadget) %>
      </div>
    <% end %>           
  </div>
  <div class="gadget-content">
    <table class="table table-sm">
      <%= render "gadgets/gadget_table", gadget: gadget %>
    </table>
  </div>
</div>

